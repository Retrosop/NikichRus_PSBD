            <StackLayout Orientation="Horizontal" 
                         HorizontalOptions="Center">

                <Button Clicked="sdV_start" Text="Старт" ></Button>
                <Button x:Name="btnStart" Clicked="sdV_stop"  Text="Стоп"></Button>
                <Button Clicked="sdV_Reset" Text="Рестарт"></Button>


            </StackLayout>

        </StackLayout>

    </ContentPage>
